    # Define a function to handle when audio passes clipBegin
    def onClipBegin(self, spanID):

        old_spanID = self.spanID
        self.spanID = spanID
        self.send_message('mark', old_spanID=old_spanID, spanID = self.spanID)
        # Add your actions for when the audio passes clipBegin

