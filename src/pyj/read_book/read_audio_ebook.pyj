HIDDEN = 0
WAITING_FOR_PLAY_TO_START = 1
PAUSED = 2
PLAYING = 3
STOPPED = 4


def is_flow_mode():
    sd = get_session_data()
    mode = sd.get('read_mode')
    return mode is 'flow'


class ReadAudioEbook:
    
    dont_hide_on_content_loaded = True

    def __init__(self, view):
        self.view = view
        self.parser = new window.DOMParser()
        self._state = HIDDEN
        self.bar_id = unique_id('bar')
        
        container = self.container
        container.setAttribute('tabindex', '0')
        container.style.overflow = 'hidden'
        container.style.justifyContent = 'flex-end'
        container.style.alignItems = 'flex-end' if is_flow_mode() else 'flex-start'
        container.appendChild(E.div(
            id=self.bar_id,
            style='border: solid 1px currentColor; border-radius: 5px;'
            'display: flex; flex-direction: column; margin: 1rem;'
        )) 

        self.audio_id = unique_id('audio')
        container.appendChild(E.audio(
            id=self.audio_id,
            style='display: flex;',
            src='',
            # src='book/OEBPS/Audio/01.mp3',
            # src="book/OEBPS" + audioFile[1:],
            # clbr://internal.sandbox/book/OEBPS/Audio/01.mp3
            controls="controls"
        )) # not work, src is from iframe 

        self.audioplayer = document.getElementById(self.audio_id) 

        self.audioplayer.addEventListener('play', self.onAudioStart)

